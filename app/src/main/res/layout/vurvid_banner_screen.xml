<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/view_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVurvName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mary Smith"
                android:textColor="@color/blue"
                android:textSize="17.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVURVID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="VURV ID: 9283"
                android:textColor="@color/black"
                android:textSize="16.0dip" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/close" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/cardImg"
        android:layout_width="300.0dip"
        android:layout_height="180.0dip"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/card_rx_new">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="40.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Sudhakar Reddy yalla"
                android:textColor="@color/white"
                android:textSize="12.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rxBinNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/bin"
                android:textColor="@color/white"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="55.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vurv_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="VURV  ID: 123456fgfg"
                android:textColor="@color/white"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/rxPcnNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/pcn"
                android:textColor="@color/white"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="70.0dip"
            android:orientation="horizontal"
            android:weightSum="2.0">

            <TextView
                android:id="@+id/tvPlan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_weight="1.0"
                android:maxLines="1"
                android:text="Rx GRP: A1"
                android:textColor="@color/white"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/rxGRP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_weight="1.0"
                android:maxLines="1"
                android:text="@string/grp"
                android:textColor="@color/white"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="85.0dip"
            android:orientation="horizontal"
            android:weightSum="2.0">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_weight="1.0"
                android:gravity="center"
                android:maxLines="1"
                android:text="Rx GRP: A1"
                android:textColor="@color/white"
                android:textSize="12.0sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/raMemID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_weight="1.0"
                android:maxLines="1"
                android:text="@string/member_id"
                android:textColor="@color/white"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="100.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvExp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:maxLines="1"
                android:text="Expires: 11/22/2016"
                android:textColor="@color/white"
                android:textSize="10.0sp" />

            <TextView
                android:id="@+id/tvInsure"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_weight="1.0"
                android:maxLines="1"
                android:text="@string/this_is_not_insurance"
                android:textColor="@color/white"
                android:textSize="10.0sp" />
        </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/img_card"
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/gradient_vurv" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20.0dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPatient"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="14.0dip"
                android:text=""/>

            <TextView
                android:id="@+id/tvPatient2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="14.0dip"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvHealth"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5.0dip"
                android:textColor="@color/black"
                android:textSize="14.0dip" />

            <Button
                android:id="@+id/openBtn"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_gravity="bottom"
                android:layout_marginLeft="40.0dip"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginRight="40.0dip"
                android:layout_marginBottom="30.0dip"
                android:background="@drawable/gradient_button_background"
                android:text="@string/open"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>